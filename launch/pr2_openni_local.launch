<launch>

  <group>

    <!-- <group ns="/head_camera/rgb"> -->
    <!-- <group ns="/kinect_head/rgb"> -->
    <group ns="/wide_stereo/right">
      <node name="republish_rgb_image_raw"
            pkg="image_transport" type="republish"
            args="compressed raw">
        <remap from="in" to="image_raw" />
        <!-- <remap from="out" to="/head_camera_local/rgb/image_raw" /> -->
	<remap from="out" to="/kinect_head_local/rgb/image_raw" />
      </node>
    </group>

    <!-- <group ns="/head_camera/depth_registered"> -->
    <group ns="/kinect_head/depth_registered">
      <node name="republish_depth_registered_image_raw"
            pkg="image_transport" type="republish"
            args="compressedDepth raw">
        <remap from="in" to="image_raw" />
        <!-- <remap from="out" to="/head_camera_local/depth_registered/image_raw" /> -->
	<remap from="out" to="/kinect_head_local/depth_registered/image_raw" />
      </node>
    </group>

    <!-- <remap from="/head_camera_local/rgb/camera_info" -->
    <!--        to="/head_camera/rgb/camera_info" /> -->
    <!-- <remap from="/head_camera_local/rgb/camera_info" -->
    <!--        to="/kinect_head/rgb/camera_info" /> -->
    <remap from="/head_camera_local/rgb/camera_info"
           to="/wide_stereo/right/camera_info" />
    <!-- <remap from="/head_camera_local/depth_registered/camera_info" -->
    <!--        to="/head_camera/depth_registered/camera_info" /> -->
    <remap from="/head_camera_local/depth_registered/camera_info"
           to="/kinect_head/depth_registered/camera_info" />
    <include file="$(find openni2_launch)/launch/openni2.launch">
      <arg name="load_driver" value="false" />
      <!-- <arg name="camera" value="head_camera_local" /> -->
      <arg name="camera" value="kinect_head" />
      <!-- <arg name="camera" value="wide_stereo/right" /> -->
      <arg name="depth_frame_id" value="tilt_laser_depth_optical_frame" />
      <arg name="depth_registration" value="true" />
      <arg name="publish_tf" value="false" />
    </include>

  </group>

</launch>
